<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnCloseSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:background="@color/Transparent"
        android:contentDescription="@string/exit_setting_btn"
        android:src="@drawable/close_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/storeCoinsIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_coins" />

        <TextView
            android:id="@+id/storeCoinsLeftTV"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/backofcoincounter"
            android:gravity="center"
            tool:text = "0"
            android:textColor="#000" />
    </LinearLayout>

    <Button
        android:id="@+id/btnGetHint"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/free_hints_btn"
        android:text="free Coin"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00:00:00"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnGetHintByAd"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/levels_color"
        android:drawableLeft="@drawable/ic_video"
        android:text="Double Coins"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />
</LinearLayout>